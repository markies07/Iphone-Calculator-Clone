<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A7A7A7" /> <!-- Lighter orange when pressed -->
            <corners android:radius="500dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default state (when the button is not pressed) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#808080" /> <!-- Default orange color -->
            <corners android:radius="500dp" />
        </shape>
    </item>
</selector>
